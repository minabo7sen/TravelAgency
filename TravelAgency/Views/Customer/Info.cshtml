@model TravelAgency.Models.ViewModel.TicketDataView

@{
    ViewBag.Title = "Customer Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>@ViewBag.customername "Tickets"</h1>

    <table class="table table-striped table-condensed table-hover" >
        <thead class="thead-dark">
            <tr>

                
                <th class="text-center">Ticket ID</th>
                <th class="text-center">Seat Number</th>
                <th class="text-center">Trip Type</th>
                <th class="text-center">Destination</th>
                <th class="text-center">Start Date</th>
                <th class="text-center">End Date</th>

                <th></th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.TicketProfile)
            {
                

                <tr>



                    
                    <td class="text-center"> @Html.DisplayFor(m => i.ID)</td>
                    <td class="text-center"> @Html.DisplayFor(m => i.Seat_Number)</td>
                    <td class="text-center"> @Html.DisplayFor(m => i.Trip.Type)</td>
                    <td class="text-center"> @Html.DisplayFor(m => i.Trip.Destination)</td>
                    <td class="text-center"> @Html.DisplayFor(m => i.Trip.Start_Date)</td>
                    <td class="text-center"> @Html.DisplayFor(m => i.Trip.End_Date)</td>
                    



                    
                    <td>@Html.ActionLink("Cancel Trip", "CancelTrip", "Customer", new { id = i.ID }, new { @class = "btn btn-danger" })</td>
                    
                </tr>  
            }
        </tbody>
    </table>
   
    
</div>

