@model TravelAgency.Models.DB.Trip
@{ 
   Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Details", "Trip", FormMethod.Post))
{
    var i = Model;

    double platinumprice = i.Price * 6;
    double goldprice = i.Price * 4;
    double silverprice = i.Price * 2;
    <div class="container">
        <div class="row">
            <div class="col-xs-12">


                <div class="modal fade" tabindex="-1" id="myModal"
                     data-keyboard="false" data-backdrop="static">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                @i.Destination / @i.Start_Date.ToShortDateString() => @i.End_Date.ToShortDateString()
                                <button type="button" class="close" data-dismiss="modal">
                                    ×
                                </button>
                            </div>
                            <div class="modal-body">

                                <form>
                                    <div class="col-md-4 float-left">
                                        <div class="funkyradio">
                                            <div class="funkyradio-default">
                                                <input type="radio" name="radio" id="radio1" />
                                                <label for="radio1">Platinum Ticket</label>
                                                <small>This ticket price will be @platinumprice </small>
                                            </div>
                                            <div class="funkyradio-primary">
                                                <input type="radio" name="radio" id="radio2" checked />
                                                <label for="radio2">Gold Ticket</label>
                                                <small>This ticket price will be @goldprice </small>
                                            </div>
                                            <div class="funkyradio-success">
                                                <input type="radio" name="radio" id="radio3" />
                                                <label for="radio3">Silver Ticket</label>
                                                <small>This ticket price will be @silverprice </small>
                                            </div>
                                        </div>

                                    </div>
                                    <br /><br /><br /><br /><br />
                                    <div class="form-group float-right" style="width:50%">
                                        <input class="form-control" type="number"
                                               placeholder="Number of tickets" id="inputUserName" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                @Html.ActionLink("Book Tickets", "BookTrip", "Trip", new { Trip = i }, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}
       
}

<style>
    .funkyradio div {
        clear: both;
        overflow: hidden;
    }

